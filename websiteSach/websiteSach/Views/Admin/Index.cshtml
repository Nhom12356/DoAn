</footer>
<script src="~/Content/jquerymin.js"></script>
<script src="~/Content/slickmin.js"></script>
<script>
    //Slider using Slick
    $(document).ready(function () {
        $('.post-wrapper').slick({
            slidesToScroll: 1,
            autoplay: true,
            arrow: true,
            dots: true,
            autoplaySpeed: 5000,
            prevArrow: $('.prev'),
            nextArrow: $('.next'),
            appendDots: $(".dot"),
        });
    });
</script>

<script src="~/Content/script.js"></script>









